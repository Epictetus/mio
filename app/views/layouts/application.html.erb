<!DOCTYPE html>
<html>
  <head>
    <title>Mio</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="header">
      <div class="inner">
        <h1>Mio</h1>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <div class="user">
          <%= current_user.email if current_user %>
        </div>
        <hr class="defloat" />
      </div>
    </div>
    <div id="main">
      <div class="inner">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <div class="inner">
        Mio 2011 &copy; Some Rights Reserved.
      </div>
    </div>
  </body>
</html>
