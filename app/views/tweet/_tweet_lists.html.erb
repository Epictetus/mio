<% @tweets.each do |t| %>
  <li class="tweet" id="<%= t.id %>">
  <%= user_icon(t.user) %>
  <div class="description">
    <p class="body"><%= linkify t.body %></p>
    <p class="user">by <%= link_to t.user.screen_name || t.user.email, :controller => :user, :action => :timeline, :id => t.user.id %></p>
    <p class="time"><%= jp_time t.created_at %></p>
    <p class="buttons">
    <span class="reply">Reply</span>
    <span class="retweet">RT</span>
    <% if t.user == current_user %>
      <span class="delete">
        <%= link_to "Del", {:controller => :tweet, :action => :delete, :id => t.id}, :method => "POST", :confirm => "remove?" %>
      </span>
    <% elsif @favorites[t.id] && @favorites[t.id].any?{|fav| fav.user_id == current_user.id } %>
      <span class="unfavorite"><%= link_to "â˜…", {:controller => :tweet, :action => :unfavorite, :id => t.id}, :method => "POST" %></span>
    <% else %>
      <span class="favorite"><%= link_to "â˜…", {:controller => :tweet, :action => :favorite, :id => t.id}, :method => "POST" %></span>
    <% end %>
    </p>
    <hr class="defloat" />
    <% if favorites = @favorites[t.id] %>
      <p class="favorites">
      <% favorites.each do |fav| %>
        <% img = fav.user.profile_image_url %>
        <%= image_tag(img, :size => "20x20") if img %>
        liked this.
      <% end %>
      </p>
    <% end %>
  </div>
  <hr class="defloat" />
  </li>
<% end %>
